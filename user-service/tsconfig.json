{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": { "@/*": ["./*"] },
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "include": ["src/**/*"]
}